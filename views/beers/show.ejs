<h1><%= beer.data.breweries[0].name +' '+ beer.data.name %></h1>



<div class="well">
  <img src="<%= beer.data.labels.icon %>">

  <p><%= beer.data.description %></p>

  <p><%= beer.data.abv %></p>

  <p><%= beer.data.style.shortName %></p>
</div>

<form method="POST" action="/favorites">
  <input type="hidden" value="<%= beer.data.id %>" name="beerId">
  <input type="hidden" value="<%= beer.data.name %>" name="beerName">
  <input type="hidden" value="<%= currentUser.id %>" name="userId">
  <input type="submit" class="btn btn-success" value="Add to Favorites">
</form>


